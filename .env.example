# Production Environment Variables for nuno.site

# Port
PORT=4000

# Enable Phoenix server
PHX_SERVER=true

# Domain configuration
PHX_HOST=nuno.site

# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=REPLACE_WITH_SECRET_KEY_BASE

# SQLite database path
DATABASE_PATH=/var/lib/site/site.db

# Database pool size
POOL_SIZE=5

# Steam API
STEAM_ID=steam_id
STEAM_API_KEY=steam_api_key

# Bluesky
BLUESKY_HANDLE=bluesky_handle
BLUESKY_APP_PASSWORD=bluesky_app_password

# Last.fm
LASTFM_API_KEY=lastfm_api_key
LASTFM_SHARED_SECRET=lastfm_shared_secret
LASTFM_USERNAME=lastfm_username
LASTFM_SESSION_KEY=lastfm_session_key

# Spotify
SPOTIFY_CLIENT_ID=spotify_client_id
SPOTIFY_CLIENT_SECRET=spotify_client_secret
SPOTIFY_REFRESH_TOKEN=spotify_refresh_token

# GitHub
GITHUB_ACCESS_TOKEN=github_access_token

# Reddit
REDDIT_USERNAME=reddit_username
REDDIT_PROXY_URL=reddit_cloudflare_proxy_url

# Cloudflare R2
R2_ACCESS_KEY_ID=access-key
R2_SECRET_ACCESS_KEY=secret-key
R2_PUBLIC_URL=https://custom-domain.com

# VPS secrets for deployment
VPS_HOST=vps.hostname.or.ip
VPS_USER=deploy
